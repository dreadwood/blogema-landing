    }
  }
  .title {
    margin: 0;
    font-family: $font-title;
    font-size: $apx-80;
    line-height: $apx-96;
    font-weight: 400;
    text-align: left;
    color: $color-white;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    @include mobile {
      font-size: $apx-m-36;
      line-height: $apx-m-43;
    }
  }
  .categories {
    margin-top: $apx-40;
