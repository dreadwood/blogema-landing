      // display: none;
    }
  }
  .list {
    margin-top: $apx-40;
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: $apx-24;
    @include mobile {
      grid-template-columns: auto;
      gap: $apx-m-24;
      margin-top: $apx-m-40;
    }
  }
  .btn {
    display: none;
    @include mobile {
      @include transition(color, background-color);
      display: block;
      max-width: 100%;
      min-width: $apx-m-280;
      width: max-content;
      margin: $apx-m-24 auto 0 auto;
      padding: $apx-m-19 $apx-m-22;
      font: inherit;
      font-size: $apx-m-18;
      line-height: $apx-m-21;
      color: $color-black;
      text-align: center;
      background-color: $color-white;
      text-transform: uppercase;
      border: 0;
      border-radius: $apx-m-40;
      cursor: pointer;
      &:hover,
      &:focus-visible {
        color: $color-white;
        background-color: transparent;
      }
    }
  }
</style>
