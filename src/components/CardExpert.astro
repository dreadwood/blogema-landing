---
interface Props {
  company: string
  name: string
  jobTitle: string
  image: string
  color: 'pink' | 'green' | 'purple' | 'blue'
}

const { company, name, jobTitle, image, color } = Astro.props
---

<div class="card">
  <div class="photo-wrp">
    <div class:list={['photo-border', color]}></div>
    <img class="photo" src={image} width="238" height="238" alt="" />
  </div>
  <div class="category">#Эксперт</div>
  <div class="company">{company}</div>
  <div class="name" set:html={name} />
  <div class="job-title">{jobTitle}</div>
</div>

<style lang="scss">
  @import '/src/styles/global/index.scss';
  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
    padding: $apx-28 $apx-15 $apx-23 $apx-15;
    font-weight: 400;
    text-align: center;
    color: $color-white;
    border: $apx-1 solid $color-white;
    border-radius: $apx-18;
    text-transform: uppercase;
    overflow: hidden;
    @include mobile {
      width: $apx-m-280;
      padding: $apx-m-19 $apx-m-10 $apx-m-35 $apx-m-10;
      border-width: $apx-m-1;
      border-radius: $apx-m-13;
    }
  }
  .photo-wrp {
    position: relative;
    margin: 0 auto;
  }
  .photo-border {
    width: $apx-238;
    height: $apx-238;
    border-radius: 50%;
    opacity: 0.5;
    mask: radial-gradient(circle $apx-103, transparent 100%, #fff 100%);
    &.pink {
      background: $gradient-pink;
    }
    &.green {
      background: $gradient-green;
    }
    &.purple {
      background: $gradient-purple;
    }
    &.blue {
      background: $gradient-blue;
    }
    @include mobile {
      width: $apx-m-164;
      height: $apx-m-164;
      mask: radial-gradient(circle $apx-m-70, transparent 100%, #fff 100%);
    }
  }
  .photo {
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: -1;
    display: block;
    width: $apx-206;
    height: $apx-206;
    border: $apx-1 solid $color-white;
    border-radius: 50%;
    object-fit: cover;
    transform: translate(-50%, -50%);
    @include mobile {
      width: $apx-m-140;
      height: $apx-m-140;
      border-width: $apx-m-1;
    }
  }
  .category {
    display: none;
    @include mobile {
      display: block;
      margin-top: $apx-m-16;
      font-size: $apx-m-14;
      line-height: $apx-m-16;
    }
  }
  .company {
    order: 1;
    margin-top: $apx-24;
    font-size: $apx-16;
    line-height: $apx-19;
    text-transform: uppercase;
    @include mobile {
      width: $apx-m-202;
      margin-top: auto;
      padding-top: $apx-m-10;
      font-size: $apx-m-10;
      line-height: $apx-m-14;
      color: transparentize($color-white, 0.4);
      border-top: $apx-m-1 solid transparentize($color-white, 0.9);
    }
  }
  .name {
    margin-top: $apx-32;
    font-family: $font-title;
    font-size: $apx-30;
    line-height: $apx-44;
    font-weight: 400;
    color: $color-white;
    @include mobile {
      margin-top: $apx-m-27;
      margin-bottom: $apx-m-30;
      font-size: $apx-m-24;
      line-height: $apx-m-35;
    }
  }
  .job-title {
    order: 1;
    margin-top: $apx-32;
    font-size: $apx-14;
    line-height: $apx-20;
    font-weight: 300;
    color: transparentize($color-white, 0.5);
    @include mobile {
      padding-top: $apx-m-3;
      font-size: $apx-m-10;
      line-height: $apx-m-14;
      color: transparentize($color-white, 0.7);
    }
  }
</style>
